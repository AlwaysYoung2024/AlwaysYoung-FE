<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_alone_logo"
        android:layout_width="135dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_android_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/signup_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_alone_logo"
        android:layout_marginTop="54dp"
        android:hint="생년 월일(예: 20011108)"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:background="@drawable/signup_id"
        />

    <EditText
        android:id="@+id/signup_PW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signup_ID"
        android:layout_marginTop="10dp"
        android:hint="비밀번호"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:background="@drawable/signup_id"

        />

    <android.widget.Button
        android:id="@+id/signup_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signup_PW"
        android:layout_marginTop="18dp"
        android:background="@drawable/login_btn_ok"
        android:text="로그인"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <android.widget.Button
        android:id="@+id/signup_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signup_button1"
        android:layout_marginTop="18dp"
        android:background="@drawable/login_btn_ok"
        android:text="회원가입"
        android:textSize="20sp"
        android:textStyle="bold"/>

</RelativeLayout>